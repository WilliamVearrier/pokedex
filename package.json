{
  "name": "pokedex",
  "version": "0.1.0",
  "homepage": "http://WilliamVearrier.github.io/pokedex",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --colors",
    "coverage:ci": "CI=true react-scripts test --coverage --colors --watchAll=false",
    "coverage:ci:update": "CI=true react-scripts test --coverage --colors --watchAll=false -u",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:windows": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "lint:fix:windows": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-testing-library": "^4.12.0",
    "history": "^5.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "styled-components": "^5.3.1",
    "typescript": "^4.4.4",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "gh-pages": "^2.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.21",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      ".mock.*",
      "src/index.tsx",
      "src/test/test.utils.tsx",
      ".d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 60,
        "functions": 45,
        "lines": 45
      }
    }
  }
}
